{% extends 'base.html.twig' %}

{% block body_all %}
    <div class="container">
        <div class="login-box">
            <h1 class="login-logo">{% block title %}Register{% endblock %}</h1>

            {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <button type="submit">Register!</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}