<div class="sidebar-widget">
    <h3 class="sidebar-title">Popular posts</h3>
    <div class="widget-container">
        {% for post in posts %}
            {% if post.0.path %}
                {% if post.0.path starts with 'http' %}
                    {% set urlImage = post.0.path %}
                {% else %}
                    {% set urlImage = post.0.path | imagine_filter('post_image_small') %}
                {% endif %}
            {% endif %}
            <article class="widget-post">
                <div class="post-image">
                    <a href="{{ path('show_post', { 'slug': post.0.slug }) }}"><img alt="" src="{{ urlImage }}" width="90px"></a>
                </div>
                <div class="post-body">
                    <h2><a href="{{ path('show_post', { 'slug': post.0.slug }) }}">{{ post.0.pagetitle  }}</a></h2>
                    <div class="post-meta">
                        <span><i class="fa fa-clock-o"></i> {{ post.0.createdAt|date }}</span>
                        <span><i class="fa fa-star"></i> {{ post.avg_rating|round(1, 'floor') }}</span>
                    </div>
                </div>
            </article>
        {% endfor %}
    </div>
</div>