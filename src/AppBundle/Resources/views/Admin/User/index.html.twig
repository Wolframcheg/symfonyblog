{% extends 'adminbase.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>{% block title %}User list{% endblock %}</h1>
        <ol class="breadcrumb">
            <li><a href="{{ url('admin_index') }}"><i class="fa fa-dashboard"></i> Home admin</a></li>
            <li class="active">User list</li>
        </ol>
    </section>

    <section class="content">
        <div class="box">
            <table class="table table-striped table-hover table-nonfluid">
                <thead>
                    <tr>
                        <th width="50">Id</th>
                        <th>name</th>
                        <th>E-mail</th>
                        <th>Active</th>
                        <th width="50">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.username }} </td>
                        <td>{{ entity.email }}</td>
                        <td>{% if entity.isEnabled %}YES{% else %}NO{% endif %}</td>
                        <td>
                            <ul class="list-unstyled">
                                <li>
                                    <a style="margin-left: 7px;" class="glyphicon glyphicon-pencil"
                                       href="{{ path('admin_user_edit', { 'id': entity.id }) }}"></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </section>

{% endblock %}
